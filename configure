		INPUT=$BINDEST
	fi
	if [ ! -d "$INPUT" ] ; then
		if exists "$INPUT" ; then
			echo "$INPUT existe, pero no es un directorio!"
		else
			echo "$INPUT no existe. Quieres crearlo?"
			echo2 "[y] "
			read YN
			if [ "$YN" != "n" ] ; then
				if mkdir $INPUT ; then
					ok=1
				fi
			fi
		fi
	elif exists "$INPUT/services.h" ; then
		echo "No puedes usar el directorio donde estan los fuentes de los Services como directorio elegido para instalar."
	else
		ok=1
	fi
done
BINDEST=$INPUT
echo ""

####

